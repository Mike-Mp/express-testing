mixin animeCard(anime)
  .container.mb-10
    table(class="")
      tbody
        tr
          td(class="border px-4 py-2")
            a(href= anime.url )
              img(src= anime.image_url alt= anime.title width="100px" height="200px")
            h3(class="border-b-2 font-bold text-gray-800") Information
            p(class="text-sm font-medium text-gray-900") Type: 
              span.font-normal= anime.type
            p(class="text-sm font-medium text-gray-900") Episodes: 
              span.font-normal= anime.episodes.toString()
            p(class="text-sm font-medium text-gray-900") Airing: 
              span.font-normal= anime.airing.toString()
            - const startDate = new Date(anime.start_date)
            - const endDate = new Date(anime.end_date)
            p(class="text-sm font-medium text-gray-900") Start Date: 
              span.font-normal.block= startDate.toLocaleDateString()
            p(class="text-sm font-medium text-gray-900") End Date: 
              span.font-normal.block= endDate.toLocaleDateString()
          td(class="border px-4 py-2")
            table(class="table-fixed w-full")
              tbody
                tr
                  td(class="w-full")
                    a(href=anime.url class="md:inline-block md:w-16 text-center sm:text-left" target="_blank")
                      h2(class="font-semibold md:font-bold text-gray-800 mb-2 text-xl")= anime.title
                    div(class="text-center mb-2 flex flex-col sm:flex-row")
                      div()
                        h3(class="font-medium border-b-2 italic text-gray-800") SCORE
                        - let scoreColor;
                        if anime.score > 9
                          - scoreColor = "text-green-600"
                        else if anime.score > 7 && anime.score < 9
                          - scoreColor = "text-blue-600"
                        else if anime.score > 4 && anime.score < 7
                          - scoreColor = "text-yellow-600"
                        else if anime.score > 1 && anime.score < 4
                          - scoreColor = "text-red-600"
                        p(class=`text-sm font-medium ${scoreColor}`)= anime.score.toString()
                      div(class="  sm:ml-6")
                        - function formatNumber(n) {return n.toString().replace(/(\d)(?=(\d{3})+(?!\d))/g, '$1,')}
                        h3(class="font-medium border-b-2 italic text-gray-800") MEMBERS
                        - let membersColor;
                        if anime.members > 2000000
                          - membersColor = "text-green-600"
                        else if anime.members < 2000000 && anime.members > 1000000
                          - membersColor = "text-blue-600"
                        p(class=`text-sm font-medium ${membersColor}`)= formatNumber(anime.members)
                      div(class="sm:ml-6")
                        h3(class="font-medium border-b-2 italic text-gray-800") RATED
                        - let ratedColor;
                        if anime.rated === "R+"
                          - ratedColor = "text-red-600"
                        else if anime.rated === "R"
                          - ratedColor = "text-yellow-600"
                        else if anime.rated === "PG-13"
                          - ratedColor = "text-blue-600"
                        else if anime.rated ===  "PG"
                          - ratedColor = "text-blue-400"
                        else if anime.rated === "G"
                          - ratedColor = "text-green-600"
                        else if anime.rated === "Rx"
                          - ratedColor = "text-pink-400"
                        p(class=`text-sm font-medium ${ratedColor}`)= anime.rated
                    h3(class="hidden md:block border-b-2 font-bold text-gray-800") Synopsis
                    p(class="hidden md:block")= anime.synopsis
                